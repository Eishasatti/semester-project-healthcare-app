<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueDodger"
    tools:context=".HealthDetail">

    <Button
        android:id="@+id/buttonHADBack"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:text="BACK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HADImg" />

    <TextView
        android:id="@+id/textViewTitleApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 24*7 HealthCare"
        android:textColor="@color/black"
        android:textSize="38dp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.376"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewNameHAD"
        android:layout_width="100dp"
        android:layout_height="53dp"
        android:layout_marginTop="36dp"
        android:text="Dentist"
        android:textColor="@color/black"
        android:textSize="28dp"

        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitleApp"
        tools:layout_editor_absoluteX="145dp" />

    <ImageView
        android:id="@+id/HADImg"
        android:layout_width="347dp"
        android:layout_height="450dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:srcCompact="@drawable/health1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitleApp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>