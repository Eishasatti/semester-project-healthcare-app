<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splback">

    <ImageView
        android:id="@+id/logoHealth"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:src="@drawable/heartlogo" />

    <TextView
        android:id="@+id/healthText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoHealth"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="24*7 HealthCare"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sloganText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/healthText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Your Health, Our Priority \nCare Anytime, Anywhere!"
        android:textColor="@color/white"
        android:textSize="18sp" />
</RelativeLayout>
